<!-- item_stock_table_header.xml -->
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/headerTableLayout">

    <!-- Header row -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"> <!-- Set your desired header background color -->

        <!-- Header cells -->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            android:padding="8dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Fiyat"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Günlük Değişim"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </TableRow>
</TableLayout>
